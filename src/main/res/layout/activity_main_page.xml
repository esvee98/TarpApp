<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainPage">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
                  android:orientation="vertical">
        <Button
                android:text="Diagnose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="399dp"
                android:id="@+id/sec1" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"/>
        <Button
                android:text="Forums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="399dp"
                android:id="@+id/sec2" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"/>
        <Button
                android:text="Helpline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="399dp"
                android:id="@+id/sec3" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"/>
        <Button
                android:text="Coping Strategies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="399dp"
                android:id="@+id/sec4" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"/>
        <Button
                android:text="Feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="399dp"
                android:id="@+id/sec5" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"/>

    </LinearLayout>


</RelativeLayout>