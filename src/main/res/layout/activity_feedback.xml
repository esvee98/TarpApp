<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainPage"
        android:orientation="vertical"
        android:layout_gravity="center"
>

    <LinearLayout android:layout_width="match_parent" android:layout_height="278dp"
                  android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
                  android:orientation="vertical"
    >
        <EditText
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>
        <Button
                android:text="Feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="399dp"
                android:id="@+id/sub_feed" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"/>

    </LinearLayout>


</LinearLayout>